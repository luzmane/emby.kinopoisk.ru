{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/EmbyKinopoiskRu.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build library",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/EmbyKinopoiskRu.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "build test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/EmbyKinopoiskRu.Tests/EmbyKinopoiskRu.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build library release",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/EmbyKinopoiskRu.sln",
                "/property:Configuration=Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "move file",
            "command": "mv",
            "type": "shell",
            "args": [
                "${workspaceFolder}/EmbyKinopoiskRu/bin/Debug/netstandard2.0/EmbyKinopoiskRu.dll",
                "${workspaceFolder}/../emby/plugins/"
            ],
            "problemMatcher": {
                "owner": "shell",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^mv: cannont stat .* No such file or directory$"
                }
            }
        },
        {
            "label": "start emby",
            "command": "/usr/bin/nohup",
            "type": "process",
            "isBackground": true,
            "options": {
                "env": {
                    "EMBY_DATA": "${workspaceFolder}/../emby/"
                },
                "shell": {
                    "executable": "/bin/bash"
                }
            },
            "args": [
                "/opt/emby-server/bin/emby-server"
            ],
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ]
        },
        {
            "label": "build, deploy, start server",
            "dependsOrder": "sequence",
            "dependsOn": [
                "clean",
                "build library",
                "move file",
                "start emby"
            ]
        },
        {
            "label": "pack",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "${workspaceFolder}/EmbyKinopoiskRu/EmbyKinopoiskRu.csproj",
                "/property:Configuration=Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run tests with coverage",
            "type": "process",
            "command": "dotnet",
            "args": [
                "test",
                "--collect:\"XPlat Code Coverage\""
            ],
            "options": {
                "cwd": "${workspaceFolder}/EmbyKinopoiskRu.Tests",
            },
            "group": "test",
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "generate HTML coverage",
            "type": "shell",
            "dependsOn": [
                "run tests with coverage"
            ],
            "command": "for i in $(ls); do echo $i; reportgenerator -reports:\"${i}/coverage.cobertura.xml\" -targetdir:\"${i}/coveragereport\" -reporttypes:Html; done",
            "options": {
                "cwd": "${workspaceFolder}/EmbyKinopoiskRu.Tests/TestResults",
            },
            "group": "test",
            "presentation": {
                "panel": "new"
            }
        }
    ]
}
